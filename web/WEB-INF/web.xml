    <servlet>
        <servlet-name>ListAccountServlet</servlet-name>
        <servlet-class>thien.ws1.controller.account.ListAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>thien.ws1.controller.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActiveServlet</servlet-name>
        <servlet-class>thien.ws1.controller.account.ActiveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateAccountServlet</servlet-name>
        <servlet-class>thien.ws1.controller.account.UpdateAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteAccountServlet</servlet-name>
        <servlet-class>thien.ws1.controller.account.DeleteAccountServlet</servlet-class>
